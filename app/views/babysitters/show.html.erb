<div class="body-container">
  <div class="maintxt m-2">
    <img src="/assets/child.jpg", class="img-fluid alt="...">
    <div class="text-block">
      <h2>Need a Nanny or babysitter ? </h2>
    </div>
  </div>

  <div class="container m-10" id="index-container>
    <div class="card h-100  mb-10 mt-10", id= "index-card">
      <img src="https://mybluerobot.com/wp-content/plugins/svg-avatars-generator/data/custom-img/girl.png" class="card-img-top" alt="...">
      <div class="card-body">
        <h2 class="card_title"><%= @babysitter.first_name%><%= @babysitter.last_name%></h2>
        <h4 class="card-text"><i class="fa-brands fa-pagelines"></i> Age : <%= @babysitter.age%> Years Old</h4>
        <h4 class="card-text"><i class="fa-solid fa-user"></i>  <%= @babysitter.gender%></h4>
        <h5 class="card-text"><i class="fa-solid fa-house"></i> Address :<%= @babysitter.address%></h5>
        <h5 class="card-meta mb-2"><i class="fa-solid fa-sack-dollar"></i> Cost per hour :<%= @babysitter.cost_per_hour%></h5>
        <h5 class="card-meta mb-2">-years of experience :<%= @babysitter.years_of_experience%></h5>
        <div class="mb-3 mt-3">
          <% if @babysitter.user == current_user %>
            <%= link_to "Edit information", edit_babysitter_path(current_user), class: "btn btn-primary btn-xs" %>
            <%= link_to "Delete your application", babysitter_path(@babysitter), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to stop sharing your application ?" }, class: 'btn btn-danger rounded-pill px-4 fw-bold' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
