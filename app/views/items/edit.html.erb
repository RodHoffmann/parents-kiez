<h1 class="text-center item-heading-index pt-3 pb-3">Edit Item</h1>

 <div class="container mt-4">
  <div class="row">
    <div class="col-6 m-auto">
      <div class="v = item_form">
        <h3 class="text-center item-heading-index">Edit <%= @item.name %></h1>
        <div class="mt-3">
          <%= render "edit_form", item: @item %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="text-center mb-3 mt-3">
  <%= link_to "Back to Item", item_path(@item), class: 'btn btn-secondary rounded-pill px-4 fw-bold' %>
</div>
