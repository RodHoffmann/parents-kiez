<div class="container">
  <h1>Available Items</h1>

  <%= form_tag items_path, method: :get do %>
    <div class="input-group mb-3">
      <%= text_field_tag :search, params[:search], placeholder: "Search for items", class: "form-control" %>
      <button class="btn btn-outline-secondary" type="submit">Search</button>
    </div>
  <% end %>

  <% if @items.empty? %>
    <p>Sorry, there are no available items at the moment.</p>
  <% else %>
    <ul>
      <% @items.each do |item| %>
        <li>
          <%= link_to item.name, item %>

          <p><%= item.description %></p>
          <p><strong>Age:</strong> <%= item.age %></p>
          <p><strong>House:</strong> <%= item.house %></p>
        </li>
      <% end %>
    </ul>



  <% end %>

  <%= link_to "Create New Item", new_item_path, class: "btn btn-primary rounded-pill px-4 fw-bold" %>



</div>
