<div class="container">
  <h1 class="text-center item-heading-index pt-3">Available Items</h1>

  <% if @items.empty? %>
    <p>Sorry, there are no available items at the moment.</p>
  <% else %>
    <div class="container mx-auto mt-4">
      <div class="row">
        <% @items.each do |item| %>
          <div class="col-lg-3">
            <div class="card item-card-index" style="width: 18rem;">
              <%= link_to item_path(item) do %>
                <div class="image-container">
                  <img class="card-img-top" src="<%= cl_image_path item.image.key %>" alt="<%= item.name %>">
                </div>
              <% end %>
              <div class="card-body">
                <h5 class="card-title"><%= item.name %></h5>
                  <% if item.available %>
                    <h6 class="card-subtitle mb-2 text-muted">Available</h6>
                  <% else %>
                    <h6 class="card-subtitle mb-2 text-muted">Reserved</h6>
                  <% end %>
                <p class="card-text"><%= item.description %></p>
                <p class="card-text"><%= item.age %></p>
                <p class="card-text"><%= item.house %></p>
                <a href="#" class="btn btn-item-index" style="margin-right: 20px"><i class="fas fa-link"></i> Reserve</a>
                <%= link_to item_path(item), class: "btn btn-item-index" do %>
                  <i class="fab fa-github"></i> Detail
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <div class="text-center">
    <%= link_to "Create New Item", new_item_path, class:"custom-button" %>
  </div>

</div>
