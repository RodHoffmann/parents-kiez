<div class="row gutters-sm">
  <div class="col-sm-12 mb-3">
    <div class="profile-card h-100">
      <div class="profile-card-body">
        <% if @items.empty? %>
          <p>Sorry, there are no available items at the moment.</p>
        <% else %>
          <div class="container mx-auto mt-4">
            <div class="row">
              <% @items.each do |item| %>
                <% if (item.available == true) %>
                  <div class="card_items_index">
                      <%= link_to item_path(item) do %>

                          <% if item.image.key != nil %>
                            <img class="" src="<%= cl_image_path item.image.key %>" alt="<%= item.name %>">
                          <% else %>
                          <div class="text-center avatar-container d-flex justify-content-center align-items-center">
                            <img class="" src="https://t4.ftcdn.net/jpg/04/70/29/97/360_F_470299797_UD0eoVMMSUbHCcNJCdv2t8B2g1GVqYgs.jpg", class="card-img-top", alt="<%= item.name %>">
                          </div>
                          <% end %>

                      <% end %>
                          <div class='card_content'>
                            <h5 class="card-title"><strong><%= item.name %></strong></h5>
                          </div>
                          <div class='card_content'>
                            <% if item.user.address.size > 15 %>
                              <p class=""><strong>Address: </strong><%= item.user.address.slice(0,70) %>...</p>
                            <% else %>
                              <p class=""><strong>Address: </strong><%= item.user.address %></p>
                            <% end %>
                          </div>
                          <div class="card_content">
                            <%= button_to "Reserve".html_safe, upvote_item_path(item , type: "bookmark") , method: :put, class: 'btn btn_reserve' %>
                          </div>
                          <div>
                            <%= link_to 'Details', item_path(item), class: "btn btn_details", style: "margin-left: 17px;" %>
                          </div>
                  </div>
                <% end %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
