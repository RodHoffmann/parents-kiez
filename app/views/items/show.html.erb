<h1><%= @item.name %></h1>

<p><%= @item.description %></p>
<p><strong>Age:</strong> <%= @item.age %></p>
<p><strong>House:</strong> <%= @item.house %></p>

<% if @item.available %>
  <p>This item is available for sharing.</p>
  <%= link_to "Share this item", share_item_path(@item), class: 'btn btn-success rounded-pill px-4 fw-bold', method: :patch %>
<% else %>
  <p>This item is not currently available for sharing.</p>
<% end %>

<div class="mb-3 mt-3">
  <%= link_to "Edit #{@item.name}", edit_item_path, class: 'btn btn-primary rounded-pill px-4 fw-bold' %>
</div>

<div>
  <%= link_to "Delete #{@item.name}", item_path(@item),
    data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to stop sharing this item?" },
    class: 'btn btn-danger rounded-pill px-4 fw-bold' %>
</div>
