<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card item-card-show mb-4">

          <div class="row">

            <div class="col-md-6">
              <div class="image-container">
                <% if @item.image.key != nil %>
                  <%= cl_image_tag @item.image.key, class: "card-img-right" %>
                <% else %>
                  <img src="https://st.depositphotos.com/4320021/51441/v/450/depositphotos_514411954-stock-illustration-photo-coming-soon-picture-frame.jpg" class="card-img-right" alt="<%= @item.name %>">
                <% end %>
              </div>
            </div>

            <div class="col-md-6">
              <div class="card-body">
                <h2 class="card-title mb-4"><strong><%= @item.name %></strong></h2>
                <% if @item.available %>
                  <h4 class="card-subtitle mb-4 text-muted">Available</h4>
                <% else %>
                  <h4 class="card-subtitle mb-4 text-muted">Reserved</h4>
                <% end %>
                <p class="card-text"><strong>Description: </strong><%= @item.description %></p>
                <p class="card-text"><strong>Age: </strong> for babys <%= @item.age %></p>
                <p class="card-text"><strong>Address </strong><%= @item.user.address %></p>

                <a href="#" class="btn btn-item-show mt-3" style="margin-left: 55px"><strong>Reserve Item</strong></a>
                <%= link_to edit_item_path(@item), class: "btn btn-item-show mt-3", style: "margin-left: 20px" do %>
                  <strong>Edit Item</strong>
                <% end %>

              </div>
            </div>

          </div>

      </div>
    </div>
  </div>
</div>

<div class="text-center mt-5">
  <strong><%= link_to "Back to Items", items_path, class: "custom-btn-item-show" %></strong>
</div>
