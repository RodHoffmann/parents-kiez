<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card item-card-show mb-4">
        <div class="card-body">
          <div class="row">
            <div class="col-md-4">
              <div class="image-container">
                <% if @item.image.key != nil %>
                  <%= cl_image_tag @item.image.key, class: "card-img-top" %>
                <% else %>
                  <img src="https://st.depositphotos.com/4320021/51441/v/450/depositphotos_514411954-stock-illustration-photo-coming-soon-picture-frame.jpg" class="card-img-top" alt="<%= @item.name %>">
                <% end %>
              </div>
            </div>
            <div class="col-md-8">
              <h2 class="card-title mb-4"><strong><%= @item.name %></strong></h2>
              <% if @item.available %>
                <h4 class="card-subtitle mb-4 text-muted">Available</h4>
              <% else %>
                <h4 class="card-subtitle mb-4 text-muted">Reserved</h4>
              <% end %>
              <p class="card-text"><strong>Description: </strong><%= @item.description %></p>
              <p class="card-text"><strong>Age: </strong> for <%= @item.age %> <%= @item.age == '1' ? "Year" : "Years" %></p>
              <p class="card-text"><strong>House No.: </strong><%= @item.house %></p>
              <%= link_to "Reserve Item", "#", class: "btn btn-item-show mb-2" %>
              <%= link_to "Edit Item", edit_item_path(@item), class: "btn btn-item-show mb-2" %>
              <%= link_to "Back to Items", items_path, class: "btn btn-secondary" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
