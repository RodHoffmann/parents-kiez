<h1><%= @item.name %></h1>

<p><%= @item.description %></p>
<p><strong>Age:</strong> <%= @item.age %></p>
<p><strong>House:</strong> <%= @item.house %></p>

<div class="mb-3 mt-3">
  <%= link_to "Edit", edit_item_path(@item), class: 'btn btn-primary rounded-pill px-4 fw-bold' %>
</div>

<div>
  <%= link_to "Delete", item_path(@item),
    data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this item?" },
    class: 'btn btn-danger rounded-pill px-4 fw-bold' %>
</div>
