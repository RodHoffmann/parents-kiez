<div class="container">
  <%= simple_form_for(item) do |f| %>
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :age, collection: Item::AGES, as: :radio_buttons %>
    <%= f.input :image, as: :file %>
    <div class="m-2 text-center">
    <%= f.submit "Post it now!", class: "btn btn-color px-5 mb-3 w-100" %>
    </div>
  <% end %>
</div>
