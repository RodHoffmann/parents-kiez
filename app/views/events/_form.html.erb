<div class="container">
  <%= simple_form_for(event) do |f| %>
    <%= f.input :name %>
    <%= f.input :description%>
    <%= f.input :address%>
    <%= f.input :cost %>
    <%= f.input :category%>
    <%= f.input :date %>
    <%= f.input :image, as: :file %>
    <%= f.submit "Save your event!" %>
  <% end %>
</div>
