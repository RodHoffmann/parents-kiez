<% content_for :meta_title, "#{@event.name} is on #{DEFAULT_META["meta_product_name"]}" %>
<% content_for :meta_description, @event.description %>
<% content_for :meta_image, cl_image_path(@event.image.key) %>

<div class="container">
  <div class="body-container m-20">
    <div class="row m-25" id="container">
      <div class="col-sm-12 col-md-12 col-lg-12 col-12 mb-4">
        <div class="card-show mb-10 mt-20", id= "show-card-events">
          <div class="row", id="card">
          <%= button_to "Save <i class='fa-solid fa-bookmark'></i> ".html_safe, upvote_event_path(@event , type: "bookmark") ,class:"save-event" , method: :put %>

          <div class="col-6 col-sm-12 col-lg-6 col-12 col-md-12">
            <div classs="event-photo">
              <% if @event.image.key != nil %>
                  <img class="event-photo " src="<%= cl_image_path @event.image.key %>" alt="<%= @event.name %>" style="height: auto;">
              <% else %>
                  <img class="event-photo" src="https://mybluerobot.com/wp-content/plugins/svg-avatars-generator/data/custom-img/girl.png", class="event-photo, alt="<%=  @event.name %>">
              <% end %>
            </div>
          </div>
          <div class="col-6 col-sm-6 col-lg-6 col-md-6">
            <div class="card-body-event">
              <h2 class="card-title m-2"><%= @event.name%> </h2>

              <p class="card-text m-2 mb-4"><i class="fa-solid fa-location-dot"></i>  <%= @event.address%> </p>
              <p class="card-text m-2 mb-3"><i class="fa-solid fa-shapes"></i> Category: <%= @event.category%> </p>
              <p class="card-text m-2 mb-3"><i class="fa-solid fa-calendar-days"></i>  <%= @event.date%> </p>
              <p class="card-text m-2 mb-3"><i class="fa-solid fa-sack-dollar"></i> Cost:<%= @event.cost%> <i class="fa-solid fa-euro-sign"></i></p>
            </div>
          </div>
        </div>
        <div class="mb-2">
          <% if @event.user == current_user %>
            <%= link_to "Edit information", edit_event_path, class: "btn-send-msg m-2" %>
            <%= link_to "Delete your event", event_path(@event), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to stop sharing your events ?" }, class: 'btn btn-danger  m-2rounded-pill px-4 fw-bold' %>
          <% end %>
        </div>
        <div class= "back">
          <%= link_to  events_path, class: "back-event" do %>
            <i class="fa-solid fa-arrow-left-long"></i>
            Back to events Page
          <% end %>
        </div>
        <div class= "descrcription m-3">
          <strong><p class="card-text-description m-2">Description</p></strong>
          <%= @event.description%>
        </div>


      </div>
    </div>
  </div>
</div>
