<div class="navbar navbar-expand-sm navbar-light navbar-lewagon navbar-background">
  <div class="container-fluid">
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag "https://res.cloudinary.com/dgtys3cw2/image/upload/v1681468298/zk8qsfqlxhfx1oppt5r1.png" %>
    <%end%>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto align-items-center">
        <% if user_signed_in? %>
          <li class="nav-item active">
            <%= link_to "Marketplace", items_path, class: "nav-link" %>
          </li>
          <li class="nav-item active">
            <%= link_to "Babysitters", babysitters_path, class: "nav-link" %>
          </li>

          <li class="nav-item active">
            <%= link_to "Activities", events_path, class: "nav-link" %>
          </li>

          <li class="nav-item">
            <%= link_to "Messages", chatrooms_path , class: "nav-link" %>
          </li>
          <li class="nav-item dropdown">
            <a href="#" class="nav-link" data-bs-toggle="dropdown"><% if current_user.image.key.nil? %>
                <%= image_tag "/assets/default_avatar.png", class: "avatar" %>
              <% else  %>
                <%= cl_image_tag current_user.image.key, crop: :thumb, gravity: :face, width: 40, height: 40, class: "avatar" %>
              <% end %>
              </a>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to "Action", "#", class: "dropdown-item" %>
              <%= link_to "Another action", "#", class: "dropdown-item" %>
              <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
